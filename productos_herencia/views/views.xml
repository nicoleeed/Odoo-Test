<odoo>
  <data>
    <!-- Vista de árbol -->
    <record id="product_template_view_tree_inherit" model="ir.ui.view">
      <field name="name">product.template.tree.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="marca"/>
          <field name="talla"/>
        </xpath>
        
      </field>
    </record>
    <!-- Vista de formulario -->
    <record id="product_template_view_form_inherit" model="ir.ui.view">
      <field name="name">product.template.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="marca"/>
          <field name="talla"/>
        </xpath>
      </field>
    </record>
    <!-- Acciones de ventana -->
    <record id="product_template_action_tree_inherit" model="ir.actions.act_window">
      <field name="name">Productos</field>
      <field name="res_model">product.template</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Agrega nuevos productos
        </p>
      </field>
    </record>
    <!-- Menú -->
    <menuitem id="menu_producto" name="Productos" sequence="10" />

    <menuitem id="menu_producto_categ" name="Categoría de Productos" parent="menu_producto" sequence="1" />

  </data>
</odoo>
